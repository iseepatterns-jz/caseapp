# Application Configuration
APP_NAME=Court Case Management System
DEBUG=false
VERSION=1.0.0

# Database Configuration (Individual fields for RDS compatibility)
DB_HOST=localhost
DB_PORT=5432
DB_USER=courtcase_user
DB_PASSWORD=courtcase_password
DB_NAME=courtcase_db

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# S3 Configuration
S3_BUCKET_NAME=court-case-documents
S3_MEDIA_BUCKET=court-case-media
S3_BUCKET_REGION=us-east-1

# Textract Configuration
TEXTRACT_ROLE_ARN=arn:aws:iam::123456789012:role/TextractRole

# Comprehend Configuration
COMPREHEND_ENDPOINT=https://comprehend.us-east-1.amazonaws.com

# OpenSearch Configuration
OPENSEARCH_ENDPOINT=https://your-opensearch-domain.us-east-1.es.amazonaws.com
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=your_opensearch_password

# Cognito Configuration
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_CLIENT_ID=your_client_id
COGNITO_CLIENT_SECRET=your_client_secret

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Document Processing
MAX_FILE_SIZE=52428800  # 50MB
ALLOWED_FILE_TYPES=.pdf,.docx,.doc,.txt,.mp4,.avi,.mov,.mp3,.wav,.m4a,.jpg,.jpeg,.png

# AI Configuration
ENABLE_AI_FEATURES=true
CASE_CATEGORIZATION_MODEL=amazon.titan-text-express-v1

# Court Integration
COURT_EFILING_API_URL=https://api.court-system.gov/efiling
COURT_EFILING_API_KEY=your_court_api_key

# Media Processing
MEDIA_PROCESSING_TIMEOUT=3600  # 1 hour
MAX_CONCURRENT_PROCESSING=5

# Logging
LOG_LEVEL=INFO

# Development
ALLOWED_HOSTS=http://localhost:3000,http://localhost:8000,https://your-domain.com